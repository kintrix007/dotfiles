{
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.defaultProfile.linux": "bash",

  "workbench.colorTheme": "One Dark Pro Mix",
  "editor.fontFamily": "'FiraCode Nerd Font', 'Fira Code', 'JetBrainsMono Nerd Font', 'JetBrains Mono', 'Droid Sans Mono', monospace",
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font', 'Fira Code', 'JetBrainsMono Nerd Font', 'JetBrains Mono', monospace",

  "editor.lineNumbers": "relative",
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,

  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  
  "editor.fontLigatures": true,
  "files.insertFinalNewline": true,
  "editor.tabSize": 4,
  "editor.wordWrapColumn": 100,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.formatOnPaste": true,

  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.suggest.localityBonus": true,
  // "editor.suggestSelection": "recentlyUsed",
  "editor.suggestSelection": "first",
  "editor.snippetSuggestions": "none",
  "editor.parameterHints.cycle": true,

  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.inlayHints.padding": true,
  "editor.inlayHints.fontSize": 11,
  "editor.inlayHints.fontFamily": "Fira Mono",

  "redhat.telemetry.enabled": false,
  "gitlens.telemetry.enabled": false,
  "code-runner.enableAppInsights": false,
  "telemetry.telemetryLevel": "off",

  "editor.linkedEditing": true,

  "diffEditor.codeLens": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.defaultDateFormat": "YYYY-MM-DD, HH:mm",
  "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
  "gitlens.defaultTimeFormat": "HH:mm",
  "gitlens.statusBar.format": "${author}, ${agoOrDate}, via '${pullRequest}'",
  "gitlens.hovers.avatars": false,

  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,

  "vim.leader": "<space>",
  "vim.handleKeys": {
    // "<C-a>": false, // I want my increment to work...
    "<C-f>": false,
    "<C-S-f>": false,
  },

  "vim.insertModeKeyBindings": [
    {
      "before": [ "<C-y>" ],
      "commands": [ "acceptSelectedSuggestion" ],
    },
    {
      "before": [ "<Tab>" ],
      "commands": [ "showNextParameterHint" ],
    },
    {
      "before": [ "<S-Tab>" ],
      "commands": [ "showPrevParameterHint" ],
    },
    {
      "before": [ "<C-u>" ],
      "commands": [ "nop" ],
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [ "<leader>", "f" ],
      "commands": [ "editor.action.formatDocument" ],
    },
    {
      "before": [ "<leader>", "t" ],
      "commands": [ "editor.action.tab" ]
    },
    {
      "before": [ "K" ],
      "commands": [ "editor.action.showHover" ],
    },
    {
      "before": [ "<F2>" ],
      "commands": [ "editor.action.rename" ],
    },
    {
      "before": [ "<C-n>" ],
      "commands": [ ":nohl" ],
    },
    {
      "before": [ "g", "c", "A" ],
      "after": [ "A", " ", "/", "/", " " ],
    },
  ],

  "v.vls.enable": true,

  "rust-analyzer.completion.callable.snippets": "add_parentheses",
  "rust-analyzer.inlayHints.typeHints.enable": false,

  "mesonbuild.buildFolder": "build",
  "java.import.gradle.java.home": "/usr/lib/jvm/java-17-openjdk-17.0.6.0.10-1.fc36.x86_64",

  "code-runner.executorMap": {
    "kotlin": "cd $dir && kotlinc $fileName -include-runtime -d main.jar && kotlin main.jar",
    "vala": "tmp=`mktemp` && cd $dir && valac $fileName -o $tmp && $tmp"
  },

  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    }
  ],

  "[markdown]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
  },

  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.autoIndent": "advanced",
  },

  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "strings": true
    },
  },

  "[shellscript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  "C_Cpp.default.cppStandard": "c++23",
  "C_Cpp.default.cStandard": "c23",
  "[c]": {
    "editor.tabSize": 2,
  },
  "[cpp]": {
    "editor.tabSize": 2,
  },

  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.enableImportCompletion": true,
  "python.analysis.autoImportCompletions": true,
  // "csharp.inlayHints.parameters.enabled": true,
  // "csharp.inlayHints.parameters.forIndexerParameters": true,
  // "csharp.inlayHints.parameters.forLiteralParameters": true,
  // "csharp.inlayHints.parameters.forObjectCreationParameters": true,
  // "csharp.inlayHints.parameters.forOtherParameters": true,
  "csharp.inlayHints.types.enabled": true,
  "csharp.inlayHints.types.forLambdaParameterTypes": true,
  "[csharp]": {
    "editor.inlayHints.enabled": "on",
    "editor.maxTokenizationLineLength": 2500,
    "editor.inlineSuggest.suppressSuggestions": false
  },

  "nim.nimprettyIndent": 2,
  "nim.nimprettyMaxLineLen": 100,
  "[nim]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true
  },

  "haskell.formattingProvider": "stylish-haskell",
  "haskell.plugin.ghcide-completions.config.snippetsOn": false,
  "haskell.manageHLS": "GHCup",
  "haskell.upgradeGHCup": false,
  "[haskell]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },

  "[agda]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },

  "[html]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on"
  },

  "[css]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  "javascript.format.semicolons": "insert",
  "javascript.preferences.quoteStyle": "double",
  "typescript.format.semicolons": "insert",
  "typescript.preferences.quoteStyle": "double",
  "typescript.preferences.useAliasesForRenames": false,
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "npm.keybindingsChangedWarningShown": true,

  "[elm]": {
    "editor.codeLens": false,
  },

  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "[python]": {
    "editor.formatOnType": true
  },
  "cSpell.userWords": [
    "agda",
    "Bakbak",
    "Bifunctor",
    "Brainfuck",
    "categorise",
    "Checkstyle",
    "colour",
    "concat",
    "Customisation",
    "customise",
    "Elems",
    "Fira",
    "fmap",
    "foldl",
    "foldr",
    "funcs",
    "ghcide",
    "Haxe",
    "idxs",
    "Invertibility",
    "Jqwik",
    "Kanagawa",
    "kintrix",
    "kotlinc",
    "mappend",
    "mempty",
    "mesonbuild",
    "mktemp",
    "Monoid",
    "Monokai",
    "Neovim",
    "nimpretty",
    "nixpkgs",
    "organise",
    "organised",
    "POSIX",
    "Semigroup",
    "signum",
    "Stantec",
    "Subgoal",
    "succ",
    "Synchronisation",
    "todos",
    "toparse",
    "unlines",
    "unrecognised",
    "utilz",
    "Vala",
    "valac",
    "vals",
    "websockets",
    "Wireframes"
  ],
  "csharp.referencesCodeLens.enabled": false,
  "csharp.inlayHints.types.forImplicitVariableTypes": true,
}
